---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
type Props = {
  src: ImageMetadata;
  alt: string;
};
const { src, alt } = Astro.props;
---

<div
  class="flex overflow-hidden p-2 border-px border bg-gradient-to-t from-neutral-200 rounded-sm to-transparent"
>
  <Image
    src={src}
    width={300}
    height={200}
    alt={alt}
    format="avif"
    class="object-cover w-full h-full"
  />
</div>
